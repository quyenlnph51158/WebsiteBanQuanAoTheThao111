@model API.DomainCusTomer.DTOs.AccountCustomer.OtpCustomerDto
@{
    ViewData["Title"] = "ConfirmOtppRegister";
    Layout = "~/Views/Shared/_LayoutChung.cshtml";
}

<link href="~/css/CSS/Confim.css" rel="stylesheet" />

<div class="otp-container">
    <h4 class="mb-3 text-center">Nhập mã OTP</h4>
    <p class="text-muted text-center">Mã xác thực đã được gửi đến email của bạn.</p>

    <form  asp-action="ConfirmOtppRegister" asp-controller="LoginAccount">
        <input type="hidden" name="Email" value="@ViewBag.Email1" />

        <div class="mb-3">
            <label for="OTP" class="form-label">Mã OTP</label>
            <input id="OTP" name="OTP" type="text" maxlength="6"class="form-control otp-input" placeholder="Nhập mã gồm 6 số" 
            inputmode="numeric" pattern="\d{6}" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);" />
            <span class="text-danger" id="otp-error"></span>
        </div>
          <div class="mb-3"><p style="color:red">@ViewBag.ConfirmOtpp</p></div>
           <div class="mb-3"><p style="color:red">@ViewBag.ConfirmOtppnull</p></div>
        <button type="submit" class="btn btn-dark w-100">Xác nhận</button>
    </form>
</div>

@section Scripts {
    <script>
        // Validate OTP khi submit
        document.querySelector('form').addEventListener('submit', function (e) {
            const otpValue = document.getElementById('OTP').value;
            const otpError = document.getElementById('otp-error');

            if (!/^\d{6}$/.test(otpValue)) {
                e.preventDefault();
                otpError.textContent = "Mã OTP phải gồm đúng 6 số.";
            } else {
                otpError.textContent = "";
                clearInterval(timer);
                // KHÔNG xóa expireTime ở đây.
            }
        });
    </script>
}

