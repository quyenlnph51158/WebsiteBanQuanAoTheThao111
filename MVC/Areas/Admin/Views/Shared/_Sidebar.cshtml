@using API.Domain.DTOs
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var userJson = HttpContextAccessor.HttpContext.Session.GetString("UserData");
    AccountDto account = null;
    if (!string.IsNullOrEmpty(userJson))
    {
        account = Newtonsoft.Json.JsonConvert.DeserializeObject<AccountDto>(userJson);
    }
}
<aside class="sidebar-nav-wrapper">
    <div class="navbar-logo">
        <a href="/admin/dashboard">
            <img src="~/assets/images/logo/stylezone-logo.svg" alt="logo" />
        </a>
    </div>
    <nav class="sidebar-nav">
        <ul>
            <li class="nav-item">
                <a href="/admin">
                    <span class="icon">
                        <!-- icon thống kê -->
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8.75 18.3333C12.2376 18.3333 15.1364 15.8128 15.7244 12.4941C15.8448 11.8143 15.2737 11.25 14.5833 11.25H10C9.30966 11.25 8.75 10.6903 8.75 10V5.41666C8.75 4.7263 8.18563 4.15512 7.50586 4.27556C4.18711 4.86357 1.66666 7.76243 1.66666 11.25C1.66666 15.162 4.83797 18.3333 8.75 18.3333Z" />
