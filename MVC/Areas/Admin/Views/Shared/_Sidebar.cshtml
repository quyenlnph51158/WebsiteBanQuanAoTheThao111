            <li class="nav-item nav-item-has-children">
                <a href="#0" class="collapsed" data-bs-toggle="collapse" data-bs-target="#ddmenu_product" aria-controls="ddmenu_product" aria-expanded="false">
                    <span class="icon"><i class="lni lni-grid-alt"></i></span>
                    <span class="text">Sản phẩm</span>
                </a>
                <ul id="ddmenu_product" class="collapse dropdown-nav">
                    <li><a href="/admin/products">Danh sách sản phẩm</a></li>
                    <li><a href="/admin/categories">Danh mục sản phẩm</a></li>
                    <li><a href="/admin/brands">Danh sách thương hiệu</a></li>
                    <li><a href="/admin/materials">Danh sách chất liệu</a></li>
                    <li><a href="/admin/origins">Danh sách xuất xứ</a></li>
                    <li><a href="/admin/colors">Danh sách màu</a></li>
                    <li><a href="/admin/suppliers">Nhà cung cấp</a></li>
