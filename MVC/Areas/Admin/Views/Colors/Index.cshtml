@model List<API.Domain.DTOs.ColorDto>
@{
    ViewData["Title"] = "Danh sách màu";
}


@section Styles {
    <style>
        .copy-id {
            cursor: pointer;
            text-decoration: underline dotted;
        }
    </style>

}
<section class="table-components">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Danh sách màu</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách bảng -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <a asp-action="Create" class="btn btn-primary btn-sm">
                                    <i class="lni lni-plus me-1" style="font-size: 0.85em;"></i> Thêm màu
                                </a>
                            </div>
                            <div class="col-md-6 text-end">
                                <a class="text-primary fw-medium" role="button" asp-action="Export">
                                    <i class="bi bi-upload"></i> Xuất file
                                </a>
                            </div>
                        </div>

                        <div class="table-wrapper table-responsive">
                            <table id="colorTable" class="table">
                                <thead>
                                    <tr>
                                        <th style="width: 150px;">ID</th>
                                        <th>Mã màu</th>
                                        <th>Tên màu</th>
                                        <th>Màu</th>
                                        <th>Số loại sản phẩm</th> <!-- thêm -->
                                        <th>Tổng số lượng</th>
                                        <th>Ngày tạo</th>
                                        <th>Ngày cập nhật</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var color in Model)
                                    {
                                        <tr>
                                            <td title="@color.Id">
                                                <span class="copy-id" data-id="@color.Id">
                                                    @color.Id.ToString().Substring(0, 8)
                                                </span>
                                            </td>
                                            <td>@color.Code</td>
                                            <td>@color.Name</td>
                                            
                                            <td>
                                                <div style="width: 30px; height: 30px; border: 1px solid #ccc; background-color: @color.Code;"></div>
                                            </td>
                                            <td>@color.QuantityProduct</td>
                                            <td>@color.TotalQuantity</td>
                                            <td>@color.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@(color.UpdatedAt.HasValue ? color.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa cập nhật")</td>
                                            
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@color.Id"
                                                   class="lni lni-pencil text-primary"
                                                   title="Chỉnh sửa"></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#colorTable').DataTable({
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ dòng",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
                    paginate: {
                        first: "Đầu",
                        last: "Cuối",
                        next: "→",
                        previous: "←"
                    },
                    zeroRecords: "Không tìm thấy dữ liệu phù hợp",
                    infoEmpty: "Không có dữ liệu",
                    infoFiltered: "(lọc từ tổng _MAX_ dòng)"
                },
                order: [[2, 'asc']] 
            });
        });

        // Copy ID to clipboard on click
        $(document).on('click', '.copy-id', function () {
            const fullId = $(this).data('id');
            navigator.clipboard.writeText(fullId)
                .then(() => {
                    alert('Đã sao chép ID: ' + fullId);
                })
                .catch(err => {
                    console.error('Không thể sao chép: ', err);
                });
        });
    </script>
}
