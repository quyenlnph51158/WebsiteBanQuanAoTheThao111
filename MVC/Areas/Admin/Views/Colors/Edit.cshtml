@model API.Domain.Request.ColorRequest.UpdateColorRequest

@{
    ViewData["Title"] = "Chỉnh sửa màu";
}

<section class="edit-category-section">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="card border-0 shadow rounded-4">
                    <div class="card-header bg-gradient-primary text-white text-center rounded-top-4 py-3">
                        <h3 class="mb-0"><i class="lni lni-pencil-alt"></i> Chỉnh sửa màu</h3>
                        <p class="small mt-1 mb-0">Cập nhật thông tin màu của bạn</p>
                    </div>
                    <div class="card-body p-4 bg-light rounded-bottom-4">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">Tên màu</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="lni lni-tag"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên màu" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Code" class="form-label fw-semibold">Code</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="lni lni-comments-alt"></i></span>
                                    <input asp-for="Code" class="form-control" placeholder="#FFFFFF hoặc mã hex..." />

                                </div>
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="lni lni-arrow-left-circle"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="lni lni-save"></i> Lưu thay đổi
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
