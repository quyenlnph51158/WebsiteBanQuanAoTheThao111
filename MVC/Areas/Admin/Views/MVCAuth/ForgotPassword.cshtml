@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #f5f5f5; /* nền ngoài xám nhạt */
            font-family: 'Segoe UI', sans-serif;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
            padding: 40px 30px;
            background: #fff; /* form màu trắng */
            border: none; /* bỏ viền vàng */
            border-radius: 15px;
            box-shadow: 0 0 25px rgba(25, 118, 210, 0.2); /* chỉ shadow xanh nhẹ */
            color: #1976d2; /* chữ xanh dương */
            position: relative;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

            .login-form h2 {
                color: #1976d2;
                font-weight: bold;
                margin: 10px 0 25px;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

        .form-control {
            border-radius: 30px;
            border: 1px solid #1976d2;
            background: #fafafa;
            padding: 12px 20px;
            transition: 0.3s;
        }

            .form-control:focus {
                border-color: #1976d2;
                box-shadow: 0 0 10px rgba(25, 118, 210, 0.4);
            }

        button {
            width: 100%;
            background: #1976d2; /* xanh dương */
            color: #fff; /* chữ trắng */
            font-weight: bold;
            border: none;
            border-radius: 30px;
            padding: 12px;
            font-size: 1.1rem;
            margin-top: 15px;
            transition: all 0.3s;
            box-shadow: 0 0 10px rgba(25, 118, 210, 0.6);
        }

            button:hover {
                background: #0d47a1; /* xanh đậm khi hover */
                box-shadow: 0 0 20px #1976d2, 0 0 40px #0d47a1;
                transform: translateY(-2px);
            }

        .forgot-link {
            display: block;
            margin-top: 15px;
            font-size: 0.9rem;
            color: #1976d2;
            transition: 0.3s;
        }

            .forgot-link:hover {
                text-decoration: underline;
                color: #0d47a1;
            }
    </style>
</head>
<body>
    <div class="login-form">
        <h4>@ViewData["Title"]</h4>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form method="post">
            <div class="form-group text-left">
                <input type="text" name="emailOrUsername" class="form-control" required placeholder="Nhập email của bạn" />
            </div>
            <button type="submit">📩 Gửi yêu cầu</button>
        </form>

        <a asp-action="Login" asp-controller="MVCAuth" asp-area="Admin" class="back-link">
            ← Quay lại đăng nhập
        </a>
    </div>
</body>
</html>