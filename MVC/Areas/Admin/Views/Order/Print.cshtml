@model API.Domain.DTOs.OrderDto
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #000;
            padding: 8px;
        }
    </style>
</head>
<body onload="window.print()">
    <h2 style="text-align:center">HÓA ĐƠN BÁN HÀNG</h2>
    <p><strong>Mã hóa đơn:</strong> @Model.Id</p>
    <p><strong>Người mua:</strong> @Model.CustomerName</p>
    <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Ngày mua:</strong> @Model.CreateAt</p>


    <table>
        <thead>
            <tr>
                <th>STT</th>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 1;
                foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.Value.ToString("N0")</td>
                        <td>@Convert.ToDecimal(item.Quantity * item.Price).ToString("N0")</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>

    <h3 style="text-align:right">Tổng tiền: @Model.TotalAmount.Value.ToString("N0")</h3>
</body>
</html>
