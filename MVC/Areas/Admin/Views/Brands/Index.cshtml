@model List<API.Domain.DTOs.BrandDto>

@{
    ViewData["Title"] = "Thương hiệu";
}

<section class="table-components">
    <div class="container-fluid">
        <!-- Tiêu đề -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Thương hiệu</h2>
                    </div>
                </div>
                @* <div class="col-md-6">
                    <div class="breadcrumb-wrapper">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Trang chủ</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Danh sách thương hiệu
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div> *@
            </div>
        </div>

        <!-- Danh sách bảng -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <a asp-action="Create" class="btn btn-primary btn-sm">
                                    <i class="lni lni-plus me-1" style="font-size: 0.85em;"></i> Thêm thương hiệu
                                </a>
                            </div>
                            <div class="col-md-6 text-end">
                                <a class="text-primary fw-medium" role="button" asp-action="Export">
                                    <i class="bi bi-upload"></i> Xuất file
                                </a>
                            </div>
                        </div>

                        <div class="table-wrapper table-responsive">
                            <table id="brandTable" class="table">
                                <thead>
                                    <tr>
                                        <th style="width: 150px;">ID</th>
                                        <th style="width: 150px;">Mã</th>
                                        <th style="width: 200px;">Tên thương hiệu</th>
                                        <th style="width: 200px;">Số lượng sản phẩm</th>
                                        <th style="width: 200px;">Tổng số lượng</th>
                                        <th style="width: 180px;">Ngày tạo</th>
                                        <th style="width: 180px;">Ngày cập nhật</th>
                                        <th style="width: 100px;">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td title="@item.Id">
                                                    <span class="copy-id" data-id="@item.Id">
                                                        @item.Id.ToString().Substring(0, 8)...
                                                    </span>
                                                </td>
                                                <td>@item.Code</td>
                                                <td>@item.Name</td>
                                                <td>@item.QuantityProduct</td>
                                                <td>@item.TotalQuantity</td>
                                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    @(item.UpdatedAt.HasValue? item.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa cập nhật")
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="lni lni-pencil text-primary"
                                                       title="Chỉnh sửa"></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" class="text-center">Không có thương hiệu nào.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            if (!$.fn.DataTable.isDataTable('#brandTable')) {
                $('#brandTable').DataTable({
                    language: {
                        search: "Tìm kiếm:",
                        lengthMenu: "Hiển thị _MENU_ dòng",
                        info: "Hiển thị _START_ đến _END_ của _TOTAL_ dòng",
                        paginate: {
                            first: "Đầu",
                            last: "Cuối",
                            next: "→",
                            previous: "←"
                        },
                        zeroRecords: "Không tìm thấy dữ liệu phù hợp",
                        infoEmpty: "Không có dữ liệu",
                        infoFiltered: "(lọc từ tổng _MAX_ dòng)"
                    },
                    columnDefs: [
                        { targets: -1, orderable: false }
                    ]
                });
            }

            // Copy ID to clipboard
            $(document).on('click', '.copy-id', function () {
                const fullId = $(this).data('id');
                navigator.clipboard.writeText(fullId)
                    .then(() => alert('Đã sao chép ID: ' + fullId))
                    .catch(err => console.error('Không thể sao chép: ', err));
            });
        });
    </script>
}
